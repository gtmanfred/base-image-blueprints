        <source><![CDATA[
mkdir /root/tmp
cd /root/tmp
cat > /etc/resolv.conf<<'EOF'
nameserver 8.8.8.8
EOF
cat > /etc/zypp/repos.d/openSUSE-13.2-updates.repo <<'EOF'
[openSUSE-13.2-updates]
name=openSUSE-13.2-updates
enabled=1
autorefresh=1
baseurl=http://mirror.rackspace.com/opensuse/update/13.2/
type=NONE
EOF
rm -f /etc/zypp/repos.d/*opensuse*.repo
wget http://KICK_HOST/packages/xstools/6.2/xe-guest-utilities-6.2.0-1120.x86_64.rpm
wget http://KICK_HOST/packages/xstools/6.2/xe-guest-utilities-xenstore-6.2.0-1120.x86_64.rpm
rpm -Uhv xe-guest-utilities*.rpm
wget https://github.com/rackerlabs/openstack-guest-agents-unix/releases/download/1.39.1/nova-agent-1.39-1.x86_64.rpm
rpm -Uhv nova-agent*
chkconfig sshd on
wget http://dd9ae84647939c3a4e29-34570634e5b2d7f40ba94fa8b6a989f4.r72.cf5.rackcdn.com/cloud-init-0.7.5-bzr971.noarch.rpm
rpm -Uhv --nodeps --force cloud-*rpm
chkconfig cloud-init-local on
chkconfig cloud-init on
chkconfig cloud-config on
chkconfig cloud-final on
cat > /etc/cloud/cloud.cfg.d/10_rackspace.cfg <<'EOF'
datasource_list: [ ConfigDrive , None ]
disable_root: False
ssh_pwauth: True
ssh_deletekeys: False
resize_rootfs: True
syslog_fix_perms:
system_info:
  distro: sles
  default_user:
    name: opensuse
    lock_passwd: True
    gecos: OpenSUSE
    groups: []
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    shell: /bin/sh
    package_mirrors: []
EOF
cat >> /etc/sysctl.conf <<'EOF'
net.ipv4.tcp_rmem = 4096 87380 33554432
net.ipv4.tcp_wmem = 4096 65536 33554432
net.core.rmem_max = 33554432
net.core.wmem_max = 33554432
net.ipv4.tcp_window_scaling = 1
net.ipv4.tcp_timestamps = 1
net.ipv4.tcp_sack = 1
EOF
rm -f /etc/growroot-disabled
# can't get autoyast's bootloader to use disk labels instead of uuids
# the root=UUID portion in grub breaks rescue mode and other functions
# so "bootloader" above is disabled and the things below done manually instead
grub2-install /dev/hda
echo 'GRUB_DISABLE_LINUX_UUID=true' >> /etc/default/grub
grub2-mkconfig --output=/boot/grub2/grub.cfg
parted -s /dev/hda set 1 boot on
chmod 000 /usr/lib/YaST2/startup/YaST2.Second-Stage
systemctl disable YaST2-Second-Stage.service
cat > /etc/systemd/system/cloud-init-local.service <<'EOF'
[Unit]
Description=Initial cloud-init job (pre-networking)
Wants=local-fs.target
After=local-fs.target

[Service]
Type=oneshot
ExecStartPre=/usr/bin/sleep 30
ExecStart=/usr/bin/cloud-init init --local
RemainAfterExit=yes
TimeoutSec=60

# Output needs to appear in instance console output
StandardOutput=tty

[Install]
WantedBy=multi-user.target
EOF
cat > /etc/init.d/network <<'EOF' 
#!/bin/sh
# added by image creation for nova-agent compatibility
# this file should go away in a future update
# don't rely on this for anything, use systemd
if [ "$1" = "restart" ];
then
systemctl restart network.service
fi
EOF
chmod +x /etc/init.d/network

# log packages
wget http://KICK_HOST/kickstarts/package_postback.sh
bash package_postback.sh OpenSUSE_13.2_PVHVM

passwd -d root
rm -rf /root/tmp
rm -f /etc/resolv.conf
echo "done"
]]>                    
